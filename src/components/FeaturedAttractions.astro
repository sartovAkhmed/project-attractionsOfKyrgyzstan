---
import { attractions } from '../data/attractions.js';
import AttractionCard from './AttractionCard.astro';

const featuredAttractions = attractions.slice(0, 3);
---

<section class="featured-attractions">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Популярные достопримечательности</h2>
      <p class="section-subtitle">
        Познакомьтесь с самыми известными и посещаемыми местами Кыргызстана
      </p>
    </div>
    <div class="attractions-grid">
      {featuredAttractions.map(attraction => (
        <AttractionCard attraction={attraction} />
      ))}
    </div>
    <div class="section-footer">
      <a href="/attractions" class="view-all-button">
        Посмотреть все достопримечательности
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .featured-attractions {
    padding: 6rem 0;
    background: linear-gradient(135deg, #F8FAFC 0%, #EFF6FF 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    color: #111827;
    margin: 0 0 1rem 0;
    background: linear-gradient(135deg, #2563EB 0%, #10B981 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: #6B7280;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .attractions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .section-footer {
    display: flex;
    justify-content: center;
  }

  .view-all-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    background: linear-gradient(135deg, #2563EB 0%, #10B981 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.4s ease;
    box-shadow: 0 4px 20px rgba(37, 99, 235, 0.3);
  }

  .view-all-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(37, 99, 235, 0.4);
  }

  .view-all-button svg {
    transition: transform 0.3s ease;
  }

  .view-all-button:hover svg {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .featured-attractions {
      padding: 4rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .attractions-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .section-header {
      margin-bottom: 3rem;
    }

    .view-all-button {
      padding: 0.875rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>